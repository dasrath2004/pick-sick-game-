<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/psimg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="359dp"
        android:layout_gravity="center"
        android:divider="@android:color/transparent"
        android:dividerPadding="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/start"
            android:layout_width="273dp"
            android:layout_height="70dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:padding="22dp"
            android:text="START"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/rules"
            app:layout_constraintEnd_toEndOf="@+id/rules"
            app:layout_constraintStart_toStartOf="@+id/rules"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/rules"
            android:layout_width="289dp"
            android:layout_height="71dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:padding="22dp"
            android:text="RULES"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/about"
            app:layout_constraintEnd_toEndOf="@+id/about"
            app:layout_constraintStart_toStartOf="@+id/about"
            app:layout_constraintTop_toBottomOf="@id/start" />

        <Button
            android:id="@+id/about"
            android:layout_width="273dp"
            android:layout_height="70dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:padding="22dp"
            android:text="ABOUT"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rules" />
        <Button
            android:id="@+id/exit"
            android:layout_width="273dp"
            android:layout_height="70dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:padding="22dp"
            android:text="EXIT"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/rules"
            app:layout_constraintEnd_toEndOf="@+id/rules"
            app:layout_constraintStart_toStartOf="@+id/rules"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>